#!/bin/bash
echo "post-stop: $SERVICE_RESULT $EXIT_CODE $EXIT_STATUS"

[ "$SERVICE_RESULT" = success ] && exit

[ "$EXIT_STATUS" = 0 ] && exit

[ "$4" = user ] || [ "$4" = user-runtime-dir ] && exit

unit="$3"
[[ $unit = *gnome* ]] || [[ $unit = dbus-:* ]] || [[ $unit = archlinux-keyring-wkd-sync ]] || [[ $unit = xdg-desktop* ]] || [[ $unit = *dbus-bus ]] || \
  || [ "$unit" = obex ] || [ "$unit" = systemd-networkd-wait-online ] && exit

user="$1"
host="$2"
full="$5"

kpush=/opt/dotfiles/kpush
systemctl=systemctl
if [ "$user" != root ]; then
  systemctl+=' --user'
  host="$user@$host"
fi

host+=": $unit: $SERVICE_RESULT $EXIT_CODE $EXIT_STATUS"
$systemctl status "$full" | $kpush -t "<b>$host</b>  #fail"
